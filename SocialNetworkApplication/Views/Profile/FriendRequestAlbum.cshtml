@model IEnumerable<SocialNetworkApplication.Models.FriendLink>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.timestamp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.read)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.approved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profile1.first_name)
        </th>    
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.timestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.read)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.approved)
            </td>          
            <td>
                @Html.DisplayFor(modelItem => item.Profile1.first_name)
            </td>
            <td>
                @Html.ActionLink("Approve Request", "ApproveRequest", new { id = item.requester }, null) |
                @Html.ActionLink("Delete Request", "DeleteRequest", new { id = item.requester }, null)     
            </td>
        </tr>
    }

</table>
