@model IEnumerable<SocialNetworkApplication.Models.Message>

@{
    ViewBag.Title = "ViewMessages";
    int receiver = ViewBag.receiver;
}

<h2>
    Messages
</h2>

<p>
    @Html.ActionLink("Create New", "CreateMessage", new { id = receiver })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.message1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.timestamp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.read)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profile.first_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profile1.first_name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.message1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.timestamp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.read)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profile.first_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profile1.first_name)
        </td>
        <td>
            @Html.ActionLink("Mark as Read", "ReadMessage", new { id = item.receiver }, null)
        </td>
    </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to List", "Index", "Profile")
</div>